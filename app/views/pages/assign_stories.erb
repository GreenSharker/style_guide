
<h3 align="center">기사 배정: <%= @page.section_name %>(<%= @page.page_number %>)</h3>
@stories: <%= @stories.length%>
<div class="row">
  <div class="col-xs-12 col-md-6">
  <div class="col-xs-12 col-md-11">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>기사 번호</th>
          <th>담당기자</th>
          <th style="text-align:center;">제목</th>
          <th>예상 자수</th>
        </tr>
      </thead>

      <tbody>
        <% @page.working_articles.sort_by{|x| x.order}.each do |working_article| %>
            <tr>
              <td style="text-align:center;"><%= working_article.order %></td>
              <td style="text-align:left;"><%= working_article.reporter %></td>
              <td style="text-align:left;"><%= working_article.title %></td>
              <td style="text-align:center;"><%= working_article.approximate_char_count %></td>
              <td><%= button_to "기사 배정", change_story_working_article_path(working_article), method: :get, class: "btn btn-sm btn-warning" %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>

  <div class="col-xs-12 col-md-6">
  <div class="col-xs-12 col-md-11">
    <table class="table table-striped" >
      <thead>
        <tr>
          <th>배정</th>
          <th>담당기자</th>
          <th style="text-align:center;">제목</th>
          <th>현재 자수</th>
        </tr>
      </thead>

      <tbody>
        <% @stories.each do |story| %>
            <tr>
              <td style="text-align:center;"><%= story.status_string %></td>
              <td style="text-align:left;"><%= story.reporter %></td>
              <td style="text-align:left;"><%= story.title %></td>
              <td style="text-align:center;"><%= story.char_count %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  
  </div>
</div>
</div>


<!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
<nav class="navbar navbar-default navbar-fixed-top2">
  <div class="btn-group" role="group" aria-label="기능">
    <button type="button" class="btn btn-success"><%= link_to "이전으로", page_path(@page), method: :get %></button>
  <div>
</nav>
