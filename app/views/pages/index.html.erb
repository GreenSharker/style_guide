<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table>
  <thead>
    <tr>
      <th>Page number</th>
      <th>Section name</th>
      <th>Column</th>
      <th>Row</th>
      <th>Ad type</th>
      <th>Story count</th>
      <th>Color page</th>
      <th>Profile</th>
      <th>Issue</th>
      <th>Template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.page_number %></td>
        <td><%= page.section_name %></td>
        <td><%= page.column %></td>
        <td><%= page.row %></td>
        <td><%= page.ad_type %></td>
        <td><%= page.story_count %></td>
        <td><%= page.color_page %></td>
        <td><%= page.profile %></td>
        <td><%= page.issue %></td>
        <td><%= page.template_id %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

