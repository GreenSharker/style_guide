<div class="row">
  <p></p>
</div>

<div class="row">
  <div class = "col-sm-1">
    <% @page.section_pages.each do |page| %>
      <div class = "col-sm-12">
        <div>
          <a href="<%=  page_path(page) %>"><img width="100%" src="<%= page.jpg_image_path %>"></img>
            <p align =center><%= page.page_number %> </a>
        </div>
      </div>
    <% end %>
  </div>
  <div class = "col-sm-7">
    <% if File.exist?(@page.pdf_path) %>
      <div class="button-group">
        <% if browser.safari? %>
          <%= raw @page.to_svg %>
        <% elsif browser.modern?%>
          <%= raw @page.to_svg_with_jpg %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class = "col-sm-4">
    <div class="row">
      <% @page_templates.each do |template| %>
        <div class="col-sm-3" >
          <% if template.id == @page.template_id %>
            <div class='selected_template'>
              <img width="98%"  src="<%= template.jpg_image_path %>" alt="" >
              <div align="center">
                <h5><%= template.profile %>(<%= template.id %>)</h5>
              </div>
            </div>
          <% else %>
            <div class='unselected_template'>
              <p><img  src="<%= template.jpg_image_path %>" width="100%"></img></p>
              <div align="center">
              <p><%= template.profile %>(<%= template.id %>)</p>
              </div>
              <div align="center">
              <%= link_to "선택", change_template_page_path(@page.id, template_id: template.id), method: :get, remote:true, class: "btn btn-primary btn-sm", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>처리중......."}%></td>
              </div>
            </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <div align="center">
      <%= link_to "저장된 단락 스타일로 페이지 재생성", regenerate_pdf_page_path(@page), method: :get, class: "btn-group btn btn-sm btn-primary" , align: "center"%>
    </div>
</div>

