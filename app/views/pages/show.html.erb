<div class="row">
<div>
<%= render 'change_page_info', page: @page %>
</div>

<div class="col-xs-9 col-md-12">
      <% if File.exist?(@page.pdf_path) %>
        <div class="button-group">
            <%= raw @page.to_svg_with_jpg %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-md-12" name="template" id="template">
        <h3 align="center"><%= @page.page_number %>페이지 광고:<%= @page.ad_type %></h3>
        <div class="row">
          <% @page_templates.each do |template| %>
            <div class="col-xs-3 col-md-2">
              <% if template.id == @page.template_id %>
                <div class='selected_template'>
                <div align="center">
                    <p><%= raw template.to_svg %></p>
                    <h5><%= template.description %>(<%= template.id %>)</h5>
                  </div>
                </div>
              <% else %>
                <div class='unselected_template'>
                <div align="center">
                  <p><%= raw template.to_svg %></p>
                    <p><%= template.description %>(<%= template.id %>)</p>
                  </div>
                  <div align="center">
                    <%= link_to "선택", change_template_page_path(@page.id, template_id: template.id), method: :get, remote:true, class: "btn btn-info btn-sm", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>처리중......."}%></td>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

</div>
  </div>

    <!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
    <nav class="navbar navbar-default navbar-fixed-top2">
      <div class="btn-group" role="group" aria-label="기능">
        <% case session[:current_group] %>
        <% when 'first_group' %>
        <button type="button" class="btn btn-success"><%= link_to "이전으로", first_group_issue_path(@page.issue), method: :get %></button>
        <% when 'second_group' %>
        <button type="button" class="btn btn-success"><%= link_to "이전으로", second_group_issue_path(@page.issue), method: :get %></button>
        <% when 'third_group' %>
        <button type="button" class="btn btn-success"><%= link_to "이전으로", third_group_issue_path(@page.issue), method: :get %></button>
        <% when 'fourth_group' %>
        <button type="button" class="btn btn-success"><%= link_to "이전으로", fourth_group_issue_path(@page.issue), method: :get %></button>
        <% when 'fifth_group' %>
        <button type="button" class="btn btn-success"><%= link_to "이전으로", fifth_group_issue_path(@page.issue), method: :get %></button>
        <% when 'sixth_group' %>
        <button type="button" class="btn btn-success"><%= link_to "이전으로", sixth_group_issue_path(@page.issue), method: :get %></button>
        <% when 'seventh_group' %>
        <button type="button" class="btn btn-success"><%= link_to "이전으로", seventh_group_issue_path(@page.issue), method: :get %></button>
        <% when 'eighth_group' %>
        <button type="button" class="btn btn-success"><%= link_to "이전으로", eighth_group_issue_path(@page.issue), method: :get %></button>
        <% when 'nineth_group' %>
        <button type="button" class="btn btn-success"><%= link_to "이전으로", nineth_group_issue_path(@page.issue), method: :get %></button>
        <% else %>
        <button type="button" class="btn btn-success"><button type="button" class="btn btn-success">%= link_to "이전으로", issue_path(@page.issue), method: :get %></button>
        <% end %>
        <button type="button" class="btn btn-primary"><%= link_to "페이지 PDF", download_pdf_page_path, method: :get %></button>
        <button type="button" class="btn btn-warning"><%= link_to "교정 전송", save_proof_reading_pdf_page_path, method: :get, data: { confirm: '정말 보내시겠습니까?'} %></button>
        <button type="button" class="btn btn-danger"><%= link_to "인쇄 전송", send_pdf_to_printer_page_path, method: :get, data: { confirm: '정말 보내시겠습니까?'} %></button>
      <div>
    </nav>  


