<div class="row">
  <p></p>
</div>

<div class="row">
    <div class="col-xs-9 col-md-4">
      <% if File.exist?(@page.pdf_path) %>
        <div class="button-group">
            <%= raw @page.to_svg_with_jpg %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-md-8">
        <h3 align="center"><%= @page.page_number %>페이지 광고:<%= @page.ad_type %></h3>
        <div class="row">
          <% @page_templates.each do |template| %>
            <div class="col-xs-3 col-md-3">
              <% if template.id == @page.template_id %>
                <div class='selected_template'>
                    <p><%= raw template.to_svg %></p>
                  <div align="center">
                    <h5><%= template.description %>(<%= template.id %>)</h5>
                  </div>
                </div>
              <% else %>
                <div class='unselected_template'>
                  <p><%= raw template.to_svg %></p>
                  <div align="center">
                    <p><%= template.description %>(<%= template.id %>)</p>
                  </div>
                  <div align="center">
                    <%= link_to "선택", change_template_page_path(@page.id, template_id: template.id), method: :get, remote:true, class: "btn btn-info btn-sm", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>처리중......."}%></td>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div align="center">
      <%= link_to "저장된 단락 스타일로 페이지 재생성", regenerate_pdf_page_path(@page), method: :get, class: "btn-group btn btn-sm btn-primary" , align: "center"%> 
      <%= link_to "기사 배정", assign_stories_page_path(@page), method: :get, class: "btn btn-sm btn-success" %>
</div>

    <div>
      <%= render 'change_page_info', page: @page %>
    </div>

</div>
