<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="btn-group" role="group" aria-label="전송">
  <button type="button" class="btn btn-danger"><%= link_to "템플릿 변경", "#{page_path(@page)}#template" %></button>
  <button type="button" class="btn btn-primary"><%= link_to "저장된 단락 스타일로 페이지 재생성", regenerate_pdf_page_path(@page), method: :get %></button>
  <button type="button" class="btn btn-success"><%= link_to "기사 배정", assign_stories_page_path(@page), method: :get %></button>
