      <% if File.exist?(@page.pdf_path) %>
        <%= button_to "다운로드 샘플 PDF", download_pdf_page_path, method: :get, class: "btn btn-sm btn-danger" %>
        <%= raw @page.to_svg %>
        <%= button_to "다운로드 샘플 PDF", download_pdf_page_path, method: :get, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>

    <div class = "col-md-1">
      <p> </p>
    </div>
   </div>

 <% elsif browser.ie? %>
   <p>browser.ie</p>
   <div class="row">
     <div class = "col-lg-10">
       <% if File.exist?(@page.pdf_path) %>
         <%= button_to "다운로드 샘플 PDF", download_pdf_page_path, method: :get, class: "btn btn-sm btn-danger" %>
         <img width="95%" src="<%= @page.jpg_image_path %>"></img>
         <%= button_to "다운로드 샘플 PDF", download_pdf_page_path, method: :get, class: "btn btn-sm btn-danger" %>
       <% end %>
     </div>
     <div class = "col-lg-2">
       <br>
       <br>
       <br>
       <div align="center">
         <%= link_to "이전으로", issue_path(@page.issue), method: :get, class: "btn btn-lg btn-success" %>
       </div>

       <% @working_articles.each do |article| %>
         <h3><%= link_to "#{article.order}: #{article.title}", working_article_path(article) %></h3>
       <% end %>
       <% @ad_boxes.each do |ad_box| %>
         <h3><%= link_to "광고: #{ad_box.ad_type} 광고주: #{ad_box.advertiser}", ad_box_path(ad_box) %></h3>
       <% end %>
     </div>
   </div>



  <% elsif browser.modern?%>
    <p>browser.modern</p>

    <div class="row">
      <div class = "col-md-1">
        <p> </p>
      </div>
      <div class = "col-md-10">
        <% if File.exist?(@page.pdf_path) %>
          <%= button_to "다운로드 샘플 PDF", download_pdf_page_path, method: :get, class: "btn btn-sm btn-danger" %>
          <%= raw @page.to_svg_with_jpg %>
          <%= button_to "다운로드 샘플 PDF", download_pdf_page_path, method: :get, class: "btn btn-sm btn-danger" %>
        <% end %>
      </div>

      <div class = "col-md-1">
        <p> </p>
      </div>
     </div>


  <% end %>

<div align="center">
  <%= link_to "이전으로", issue_path(@page.issue), method: :get, class: "btn btn-lg btn-success" %>
</div>

<br>
<br>



<div class="row">
  <div class = "col-md-2">
    <p> </p>
  </div>
  <div class = "col-md-8">
    <div class="row">
      <% @page_templates.each do |template| %>
      <div class="col-lg-2" >
        <% if template.id == @page.template_id %>
          <div class='selected_template'>
            <img width="98%"  src="<%= template.jpg_image_path %>" alt="" >
            <div align="center">
              <h4><%= template.profile =%></h4>
            </div>
          </div>
        <% else %>
          <div class='unselected_template'>
            <p><img  src="<%= template.jpg_image_path %>" width="100%"></img></p>
            <div align="center">
              <h4><%= template.profile =%></h4>
            </div>
            <div align="center">
              <%= link_to "선택", change_template_page_path(@page.id, template_id: template.id), method: :get, remote:true, class: "btn btn-primary btn-sm", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>처리중......."}%></td>
            </div>

          </div>
        <% end %>
      </div>
      <% end %>

    </div>


  </div>
  <div class = "col-md-2">
    <p> </p>
  </div>
</div>

<div align="center">
  <%= link_to "저장된 단락 스타일로 페이지 재생성", regenerate_pdf_page_path(@page), method: :get, class: "btn-group btn btn-sm btn-primary" , align: "center"%>
</div>
