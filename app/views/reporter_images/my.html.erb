

<%= search_form_for @q do |f| %>
  <%= f.label '제목에 포함된 글자로' %>
  <%= f.search_field :title_cont %>
  <%= f.submit "검색", class: "btn btn-sm btn-normal"%>
<% end %>

<div align="center">
  <%= paginate @reporter_images %>
</div>

<div class="view">
  <% @reporter_images.each do |picture| %>
    <div class="col-md-2">
      <a href="<%=  reporter_image_path(picture) %>"><img style="object-fit:cover",  src="<%= picture.thumb_path %>" width="200px" height="200px"></img></a>
      <p align="center"><%= picture.title %></p>
    </div>
  <% end %>
</div>

