<div align="center">
<h3>오늘기사</h3>
<p><%= button_to "기사 생성", generate_stories_issue_path(Issue.last), method: :get, class: "btn btn-sm btn-warning" %></p>

  <div class='col-md-6'>

     <table border="1">
      <thead>
        <tr>
          <th>페이지</th>
          <th>순서</th>
          <th>기자</th>
          <th>제목</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @stories.each do |story| %>
          <% if story.selected%>
            <tr style="color:LightGreen;">
              <td><%= story.working_article.page.page_number if story.working_article %></td>
              <td><%= story.working_article.order if story.working_article %></td>
              <td><%= story.reporter %></td>
              <td><%= story.title %></td>
            </tr>
          <% else %>
            <tr style="color:red;">
              <td><%= story.working_article.page.page_number if story.working_article %></td>
              <td><%= story.working_article.order if story.working_article %></td>
              <td><%= story.reporter %></td>
              <td><%= story.title %></td>
            </tr>
         <% end %>


        <% end %>
      </tbody>
    </table>

  </div>
