<%= form_with(model: @story, local: true) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :날짜 %>
    <%= f.date_select :date %>
  </div>

  <div class="field ">
    <%= f.label :문패 %>
    <%= f.text_field :subject_head, :size=>"40", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :제목 %>
    <%= f.text_field :title, :size=>"40" , class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :부제목 %>
    <%= f.text_field :subtitle, :size=>"40", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :본문 %>
    <%= f.text_area :body, cols: 40, rows: 20, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label '출고 섹션' %>
    <%= f.select :summitted_section, ['미정', '1면','정치','자치행정','국제통일','금융','산업','정책','기획','오피니언']%>
  </div>
  
  <div class="field">
    <%= f.label '분류코드' %>
    <%= f.text_field :category_code %>

    <%= f.label '대분류' %>
    <%= f.select :category, ['정치', '경제','외교/국방/통일','사회','문화','지방자치','시론','시평','기타']%>
    <%= f.label '소분류' %>
    <%= f.select :category1_2, ['국회/정당', '청와대', '외교/국방', '통일']%>
    <%= f.select :category2_2, ['금융', '산업','재정','글로벌경제', '피플']%>
    <%= f.select :category3_2, ['외교/국방', '통일','지구촌소식','피플']%>
    <%= f.select :category3_2, ['사건/사고', '법률','교육','노동', '환경', '보건복지', '시민사회', '피플']%>
    <%= f.select :category4_2, ['도서관', '출판/서평','예술','내일북','피플']%>
    <%= f.select :category5_2, ['행정', '서울','경기인천강원','충청','영남','호남제주', '단체장', '지방선거', '피플', '지역내일']%>
    <%= f.select :category6_2, ['내일시론', '장명국시론','신문로']%>
    <%= f.select :category7_2, ['정치시평', '경제시평','중국시평']%>
    <%= f.select :category8_2, ['칼럼', '내일만평','기고', '내일스페셜', '여론조사', '기획연재' ]%>


    </div>

  <div class="field">
    <%= f.label '가격' %>
    <%= f.select :price, %w[무료 500원 1000원], {include_blank: false} %>
  </div>
  <%= f.button "저장하기", class: "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>


  <!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
