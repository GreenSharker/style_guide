<%= simple_form_for(@story) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :working_article %>
    <%= f.input :reporter %>
    <%= f.input :group %>
    <%= f.input :date %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :body %>
    <%= f.input :quote %>
    <%= f.input :status %>
    <%= f.input :char_count %>
    <%= f.input :published %>
    <%= f.input :path %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
