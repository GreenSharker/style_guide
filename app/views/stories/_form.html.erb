<%= form_with(model: @story, local: true) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :날짜 %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :제목 %>
    <%= f.text_field :title, :size=>"40" %>
  </div>

  <div class="field">
    <%= f.label :부제목 %>
    <%= f.text_field :subtitle, :size=>"40" %>
  </div>

  <div class="field">
    <%= f.label :본문 %>
    <%= f.text_area :body, cols: 40, rows: 20 %>
  </div>

  <div class="field">
    <%= f.label '출고 섹션' %>
    <%= f.select :summitted_section, ['미정', '1면','정치','행정','국제통일','금융','산업','정책','기획','오피니언',]%>
  </div>

