<%= simple_form_for(@story) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :working_article %>
    <%= f.input :title %>
    <%= f.input :subtile %>
    <%= f.input :body %>
    <%= f.input :quoute %>
    <%= f.input :status %>
    <%= f.input :char_count %>
    <%= f.input :published %>
    <%= f.input :path %>
    <%= f.input :section %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
