<div align="center">
<%= form_with(model: @story, local: true) do |form| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :날짜 %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :제목 %>
    <%= form.text_field :title, :size=>"40" %>
  </div>

  <div class="field">
    <%= form.label :부제목 %>
    <%= form.text_field :subtitle, :size=>"40" %>
  </div>

  <div class="field">
    <%= form.label :본문 %>
    <%= form.text_area :body, cols: 120, rows: 30 %>
  </div>

  <div class="field">
    <%= form.label '출고 섹션' %>
    <%= form.select :summitted_section, ['미정', '1면','정치','행정','국제통일','금융','산업','정책','기획','오피니언',]%>
  </div>

  <div class="actions">
    <%= form.button "저장", class: "btn btn-primary btn-md", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
  </div>
<% end %>
</div>