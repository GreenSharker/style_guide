<div align="center">
    <h3>나의 기사</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>날짜</th>
                <th>제목</th>
                <th>자수</th>
                <th>출고된 섹션</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @stories.each do |story| %>
                <% if story.selected%>
                    <tr style="background-color:skyblue;">
                        <% else story.selected%>
                        <tr>
                        <% end %>
                        <td><%= story.date %></td>
                        <td><%= story.title %></td>
                        <td><%= story.char_count %></td>
                        <td><%= story.summitted_section %></td>
                        <td><%= link_to '수정', story , class: "btn btn-sm btn-warning", method: :get%></td>
                        <td><%= link_to '삭제', story, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                <% end %>
        </tbody>
    </table>

    <%= link_to "새로운 기사 작성", new_story_path, method: :get, class: "btn btn-default btn-sm" %>

</div>

