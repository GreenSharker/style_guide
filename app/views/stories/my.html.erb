<div align="center">
<h3>나의기사</h3>

<table border="1">
  <thead>
    <tr>
      <th>날짜</th>
      <th>제목</th>
      <th>자수</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <% if story.selected%>
        <tr style="background-color:LightGreen;">
      <% else story.selected%>
        <tr style="background-color: #dddddd">
      <% end %>
        <td><%= story.date %></td>
        <td><%= story.title %></td>
        <td><%= story.char_count %></td>
        <td><%= link_to '수정', story %></td>
        <td><%= link_to '삭제', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새로운 기사 작성', new_story_path, method: :get, class: "btn btn-md btn-success" %>

</div>