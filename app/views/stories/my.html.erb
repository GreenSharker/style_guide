<p id="notice"><%= notice %></p>

<div align="center">
<h3>나의기사</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>날짜</th>
      <th>제목</th>
      <th>자수</th>
      <th>출고된 섹션</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <% if story.selected%>
        <tr style="background-color:skyblue;">
      <% else story.selected%>
      <tr>
      <% end %>
        <td><%= story.date %></td>
        <td><%= story.title %></td>
        <td><%= story.char_count %></td>
        <td><%= story.summitted_section %></td>
        <td><%= button_to '수정', story , class: "btn btn-sm btn-warning", method: :get%></td>
        <td><%= button_to '삭제', story, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>


<!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
<nav class="navbar navbar-default navbar-fixed-top2">
<div class="btn-group" role="group" aria-label="기능">
  <button type="button" class="btn btn-success"><%= link_to "새로운 기사 작성", new_story_path, method: :get %></button>
</div>
</nav>
</div>