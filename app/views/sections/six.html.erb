<h3 align='center'>6단 섹션</h3>

<table border="1" align="center">
  <thead>
    <tr>
      <th style="text-align:center;">페이지</th>
      <th style="text-align:center;">면명</th>
      <th style="text-align:center;">프로필</th>
      <th style="text-align:center;">광고 종류</th>
      <th style="text-align:center;">기사 수</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td style="text-align:center;"> <%= section.page_number %></td>
        <td style="text-align:center;"> <%= section.section_name %></td>
        <td style="text-align:center;"> <%= section.profile %></td>
        <td style="text-align:center;"><%= section.ad_type %></td>
        <td style="text-align:center;"><%= section.story_count %></td>
        <td><%= button_to "보기", section, method: :get, class: "btn btn-sm btn-success" %></td>
        <td><%= button_to "수정", edit_section_path(section), method: :get, class: "btn btn-sm btn-warning" %></td>
        <td><%= button_to "복제", duplicate_section_path(section), method: :get, class: "btn btn-sm btn-primary" %></td>
        <td><%= button_to "삭제", section, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<div align="center">
  <%= link_to "새항목 생성", new_section_path, method: :get, class: "btn btn-sm btn-info" , align: "center"%>
  <%= link_to "다운로드 CSV", sections_path(format: "csv"), method: :get, class: "btn btn-sm btn-warning" , align: "center"%>
</div>
<div align="center">
  <%= paginate @sections %>
</div>
