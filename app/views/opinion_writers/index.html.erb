<p id="notice"><%= notice %></p>

<h1>Opinion Writers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Work</th>
      <th>Position</th>
      <th>Publication</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opinion_writers.each do |opinion_writer| %>
      <tr>
        <td><%= opinion_writer.name %></td>
        <td><%= opinion_writer.title %></td>
        <td><%= opinion_writer.work %></td>
        <td><%= opinion_writer.position %></td>
        <td><%= opinion_writer.publication %></td>
        <td><%= link_to 'Show', opinion_writer %></td>
        <td><%= link_to 'Edit', edit_opinion_writer_path(opinion_writer) %></td>
        <td><%= link_to 'Destroy', opinion_writer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

