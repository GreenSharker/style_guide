<p id="notice"><%= notice %></p>

<h3>오피니언 저자</h3>
<%= search_form_for @q do |f| %>
  <%= f.label '이름에 포함된 글자로' %>
  <%= f.search_field :name_cont %>
  <%= f.label '제목에 포함된 글자로' %>
  <%= f.search_field :title_cont %>

  <%= f.submit %>
<% end %>
<br>

<div class="row">
  <% @opinion_writers.each do |writer| %>
  <div class = "col-sm-3 col-md-3"  align='center'>
  <a href="<%=  opinion_writer_path(writer) %>"><img  src="<%= writer.pdf_image_path %>" width="100%"></img></a>
    <h4 align='center'><a href='<%= opinion_writer_path(writer)%>'><%= writer.name %></a></h4>
  </div>    <!-- true -->
  <% end %>
</div>
<br>
<div align="center">
  <%= link_to '새로운 저자등록', new_opinion_writer_path , method: :get, class: "btn btn-md btn-success" %>
</div>
