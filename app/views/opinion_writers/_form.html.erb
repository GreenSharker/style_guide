<%= simple_form_for(@opinion_writer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :title %>
    <%= f.input :work %>
    <%= f.input :position %>
    <%= f.association :publication %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
