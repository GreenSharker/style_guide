
<div align="center">
<%= simple_form_for(@announcement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "이름"   %>
    <%= f.input :title, label: "제목"   %>
    <%= f.input :column, label: "댠수"   %>
    <%= f.input :lines, label: "행수" %>
    <%= f.input :page, label: "페이지" %>
    <%= f.input :color, label: "칼라" %>
    <%= f.input :script %>
    <%= f.association :publication %>
  </div>

  <!-- 편집화면 하단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
      <div class="btn-group" role="group" aria-label="기능">
    <button type="button" class="btn btn-warning"><%= link_to '이전으로', announcements_path %></button>
    <%= f.button :submit, "저장하기"  %>
  <div>
<% end %>
</div>
