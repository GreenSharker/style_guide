
<div align="center">
    <h3>기사 배정</h3>
    기사를 배정한다.
</div>


<div class="col-sm-12 col-md-12">
  <div class="col-sm-12 col-md-7">
    <%= render 'change_story_form', article: @working_article , stories: @stories%>
  </div>
  <div class="col-sm-12 col-md-5">
    <p><%= render 'show_prewview', article: @working_article %></p>
 </div>

</div>

<!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
<nav class="navbar navbar-default navbar-fixed-top2">
  <div class="btn-group" role="group" aria-label="기능">
    <% case session[:current_group] %>
    <% when 'first_group' %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", first_group_stories_issue_path(@working_article.issue), method: :get %></button>
    <% when 'second_group' %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", second_group_stories_issue_path(@working_article.issue), method: :get %></button>
    <% when 'third_group' %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", third_group_stories_issue_path(@working_article.issue), method: :get %></button>
    <% when 'fourth_group' %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", fourth_group_stories_issue_path(@working_article.issue), method: :get %></button>
    <% when 'fifth_group' %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", fifth_group_stories_issue_path(@working_article.issue), method: :get %></button>
    <% when 'sixth_group' %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", sixth_group_stories_issue_path(@working_article.issue), method: :get %></button>
    <% when 'seventh_group' %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", seventh_group_stories_issue_path(@working_article.issue), method: :get %></button>
    <% when 'eighth_group' %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", eighth_group_stories_issue_path(@working_article.issue), method: :get %></button>
    <% when 'nineth_group' %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", nineth_group_stories_issue_path(@working_article.issue), method: :get %></button>
    <% else %>
    <button type="button" class="btn btn-success"><%= link_to "이전으로", issue_path(@working_article.issue), method: :get %></button>
    <% end %>
    <button type="button" class="btn btn-primary"><%= link_to "기사 PDF", download_pdf_working_article_path(@working_article), method: :get %></button>
  </div>
</nav>  
