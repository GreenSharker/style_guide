

<%= form_for(article, remote: true) do |f| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="view">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :제목 %>
        <!-- <%= f.text_field :title, class: 'form-control' %> -->
        <%= f.text_field :title, size: 34 %>
      </div>

      <div class="form-group">
        <%= f.label '글쓴이'%>
        <%= f.text_field :reporter, size: 20 %>
      </div>

      <% if  article.quote_box_size && article.quote_box_size.to_i > 0%>
      <div class="form-group">
        <%= f.label '발문'%>
        <%= f.text_area :quote, rows: "3", class: 'form-control'  %>
      </div>
      <% end %>

  <div class="form-group-body">
    <%= f.label :본문 %>
    <%= f.text_area :body, col: "40", rows: "20", class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.text_field :image, type: "hidden" %>
  </div>

  <div class="field">
    <%= f.text_field :personal_image, type: "hidden" %>
  </div>
  <div class="form-group" >
    <%= f.label :기사종류 %>
    <%= f.select :kind, ['기사', '사진', '기고', '사설'] %>
  </div>

</div>
</div>



  <!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
    <nav class="navbar navbar-default navbar-fixed-top2">
        <ul class="nav navbar-nav navbar-left">
          <li>
            <%= link_to "이전으로", page_path(@working_article.page), method: :get, class: "btn btn-sm btn-success" %>
          </li>
          <li>
            <%= f.button "저장하기", class: "btn btn-sm btn-primary navbar-btn", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
          </li>
          <li>
            <%= link_to "페이지 PDF 다운로드", download_pdf_page_path(@working_article.page), method: :get, class: "btn btn-sm btn-warning" %>
          </li>
          <li>
            <%= link_to "기사 PDF 다운로드", download_pdf_working_article_path(@working_article), method: :get, class: "btn btn-sm btn-danger" %>
          </li>
        </ul>
      </nav>


  <!-- 편집화면 하단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
    <nav class="navbar navbar-default navbar-fixed-bottom">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "이전으로", page_path(@working_article.page), method: :get, class: "btn btn-sm btn-success" %>
          </li>
          <li>
            <%= f.button "저장하기", class: "btn btn-sm btn-primary navbar-btn", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
          </li>
          <li>
            <%= link_to "페이지 PDF 다운로드", download_pdf_page_path(@working_article.page), method: :get, class: "btn btn-sm btn-warning" %>
          </li>
          <li>
            <%= link_to "기사 PDF 다운로드", download_pdf_working_article_path(@working_article), method: :get, class: "btn btn-sm btn-danger" %>
          </li>
        </ul>
      </nav>

<% end %>
