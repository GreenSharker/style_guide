<%= form_for(article, remote: true) do |f| %>
<% if article.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(article.errors.count, "error") %>
      prohibited this article from being saved:</h2>

    <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= f.label :기사종류 %>
  <%= f.select :kind, ['기사', '사진', '기고', '사설'] %>
</div>
<% if article.kind ==  '사진'%>
  <p>사진 탭에서 사진 올리세요</p>

  <% elsif article.kind ==  '만평' %>
    <div class="form-group">
      <%= f.label :기자명 %>
      <%= f.text_field :reporter %>
    </div>

  <% else %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :제목 %>
          <%= f.text_area :title, cols: "40", rows: "2", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :부제목 %> 
          <%= f.select :subtitle_type, ['1단', '2단', '2단-2단시작', '제목밑 가로'] %>
          <%= f.text_area :subtitle, cols: "40", rows: "2", class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :기자명 %>
          <%= f.text_field :reporter %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :문패 %>
          <%= f.text_field :subject_head, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :편집자주 %>
          <%= f.text_area :subtitle_head, cols: "40", rows: "2", class: 'form-control'%>
        </div>
      </div>
    </div>

    <% if  article.quote_box_size && article.quote_box_size.to_i > 0%>
      <div class="form-group">
        <%= f.label '발문'%>
        <%= f.text_area :quote, rows: "3", class: 'form-control' %>
      </div>
    <% end %>

    <% if  article.boxed_subtitle_type && article.boxed_subtitle_type.to_i > 0%>
      <div class="form-group">
        <%= f.label '본문 박스부제'%>
        <%= f.text_area :boxed_subtitle_text, rows: "2", class: 'form-control' %>
      </div>
    <% end %>
    <% if  article.announcement_column && article.announcement_column.to_i > 0%>
      <div class="form-group">
        <%= f.label '안내문'%>
        <%= f.text_area :announcement_text, rows: "2", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label '안내문 컬러'%>
        <%= f.select :announcement_color, ['삘깅', '파랑'] %>
      </div>
    <% end %>

    <div class="wrap form-group">
      <%= f.label :본문 %>
      <%= f.text_area :body, rows: "40", class: 'form-control'%>
    </div>

    <div class="field">
      <%= f.text_field :image, type: "hidden" %>
    </div>

    <div class="field">
      <%= f.text_field :has_profile_image, type: "hidden" %>
    </div>

    <div class="field">
      <%= f.text_field :quote, type: "hidden" %>
    </div>
  <% end %>

<% end %>
