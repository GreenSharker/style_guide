<%= form_for(article, remote: true) do |f| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %>
        prohibited this article from being saved:</h2>
  
      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :기사종류 %>
    <%= f.select :kind, ['기사', '사진', '기고', '사설'] %>
  </div>
  <% if article.kind ==  '사진'%>
    <p>사진 탭에서 사진 올리세요</p>
  
    <% elsif article.kind ==  '만평' %>
      <div class="form-group">
        <%= f.label :기자명 %>
        <%= f.text_field :reporter %>
      </div>
  
    <% else %>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.label :문패 %>
            <%= f.text_field :subject_head, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :제목 %>
            <%= f.select :heading_columns, ['3단', '4단', '5단'], {include_blank: '제목 단수'} if article.column > 5 %>
            <%= f.text_area :title, cols: "40", rows: "2", class: 'form-control' %>

          </div>
          <div class="form-group">
            <%= f.label :부제목 %> 
            <%= f.select :subtitle_type, ['1단', '2단', '2단-2단시작', '제목밑 가로'] %>
            <%= f.text_area :subtitle, cols: "40", rows: "2", class: 'form-control'%>
          </div>
          <!--div class="form-group">
            <%= f.label :편집자주 %>
            <%= f.text_area :subtitle_head, cols: "40", rows: "2", class: 'form-control'%>
          </div-->
          <div class="form-group">
            <%= f.label :기자명 %>
            <%= f.text_field :reporter, class: 'form-control' %>
          </div>
        </div>
      </div>
  
      <% if  article.quote_box_size && article.quote_box_size.to_i > 0%>
        <div class="form-group">
          <%= f.label :부제목 %> 
          <%= f.select :subtitle_type, ['1단', '2단', '2단-2단시작', '제목밑 가로'] %>
          <%= f.text_area :subtitle, cols: "40", rows: "2", class: 'form-control'%>
        </div>
      <% end %>
  
      <% if  article.boxed_subtitle_type && article.boxed_subtitle_type.to_i > 0%>
        <div class="form-group">
          <%= f.label '본문 박스부제'%>
          <%= f.text_area :boxed_subtitle_text, rows: "2", class: 'form-control' %>
        </div>
      <% end %>
      <% if  article.announcement_column && article.announcement_column.to_i > 0%>
        <div class="form-group">
          <%= f.label '안내문'%>
          <%= f.text_area :announcement_text, rows: "2", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label '안내문 컬러'%>
          <%= f.select :announcement_color, ['빨강', '파랑'] %>
        </div>
      <% end %>
  
      <div class="form-group">
        <%= f.label :본문 %>
        <%= f.text_area :body, rows: "40", class: 'form-control'%>
      </div>
  
      <div class="field">
        <%= f.text_field :image, type: "hidden" %>
      </div>
  
      <div class="field">
        <%= f.text_field :has_profile_image, type: "hidden" %>
      </div>
  
      <div class="field">
        <%= f.text_field :quote, type: "hidden" %>
      </div>
    <% end %>
  
    <!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
    <nav class="navbar navbar-default navbar-fixed-top2">
      <ul class="nav navbar-nav2 navbar-left float-frame">
        <li class="float-unit">
          <%= link_to "이전으로", page_path(@working_article.page), method: :get, class: "btn btn-md btn-success" %>
        </li>
        <li class="float-unit">
          <%= f.button "저장하기", class: "btn btn-md btn-primary", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
        </li>
        <li class="float-unit">
          <%= link_to "페이지 PDF", download_pdf_page_path(@working_article.page), method: :get, class: "btn btn-md btn-warning" %>
        </li>
        <li class="float-unit">
          <%= link_to "기사 PDF", download_pdf_working_article_path(@working_article), method: :get, class: "btn btn-md btn-danger" %>
        </li>
      </ul>
    </nav>
  
    <!-- 편집화면 하단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
    <nav class="navbar navbar-default navbar-fixed-bottom">
      <ul class="nav navbar-nav2 navbar-right float-frame">
        <li class="float-unit">
          <%= link_to "이전으로", page_path(@working_article.page), method: :get, class: "btn btn-md btn-success" %>
        </li>
        <li class="float-unit">
          <%= f.button "저장하기", class: "btn btn-md btn-primary", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
        </li>
        <li class="float-unit">
          <%= link_to "페이지 PDF", download_pdf_page_path(@working_article.page), method: :get, class: "btn btn-md btn-warning" %>
        </li>
        <li class="float-unit">
          <%= link_to "기사 PDF", download_pdf_working_article_path(@working_article), method: :get, class: "btn btn-md btn-danger" %>
        </li>
      </ul>
    </nav>
  <% end %>