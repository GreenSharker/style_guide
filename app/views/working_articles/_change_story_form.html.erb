
  <div class="col-xs-12 col-md-4">
    <div class="col-xs-12 col-md-11">
      <p>섹션: <%= article.page.section_name %></p>
      <p>페이지: <%= article.page.page_number %></p>
      <p>기사 번호: <%= article.order %></p>

      <%= form_for(article, :url => { :action => "update_story" }) do |f| %>
        <% if article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
            <ul>
            <% article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :기자명 %>
          <%= f.text_field :reporter %>
        </div>

        <div class="form-group">
          <%= f.label :제목 %>
          <%= f.text_field :title %>
        </div>

      <% end %>
    </div>
  </div>

  <div class="col-xs-12 col-md-8">
  <div class="col-xs-12 col-md-11">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>페이지</th>
          <th>순서</th>
          <th>기자</th>
          <th>제목</th>
          <th>선택</th>
          <th>선택 해제</th>
        </tr>
      </thead>

      <tbody>
        <% @stories.each do |story| %>
          <% if story.selected%>
            <tr style="color:red;">
              <td><%= story.working_article.page.page_number if story.working_article %></td>
              <td><%= story.working_article.order if story.working_article %></td>
              <td><%= story.reporter %></td>
              <td><%= story.title %></td>
              <td><%= link_to "선택", assign_position_story_path(story, method: :get, box: article, class: "btn btn-sm btn-warning") %></td>
              <td><%= link_to "해제", un_assign_position_story_path(story, method: :get, box: article, class: "btn btn-sm btn-danger") %></td>
            </tr>
          <% else %>
            <tr>
              <td><%= story.working_article.page.page_number if story.working_article %></td>
              <td><%= story.working_article.order if story.working_article %></td>
              <td><%= story.reporter %></td>
              <td><%= story.title %></td>
              <td><%= link_to "선택", assign_position_story_path(story, method: :get, box: article, class: "btn btn-sm btn-warning") %></td>
            </tr>
         <% end %>

          
        <% end %>
      </tbody>
    </table>

  </div>
</div>




