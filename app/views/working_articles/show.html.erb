<div class="view">
<!-- p id="notice"></p-->
<%= form_for(@working_article, remote: true) do |f| %>
  <!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
  <nav class="navbar navbar-default navbar-fixed-top2">
    <div class="btn-group" role="group" aria-label="기능">
      <button type="button" class="btn btn-success"><%= link_to "이전으로", page_path(@working_article.page), method: :get %></button>
      <%= f.button "저장하기", class: "btn btn-primary", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
    </div>
    <div class="btn-group btn-right" role="group" aria-label="기능">
    <button class="btn btn-primary"><%= link_to "#{@ko_date}", issues_path %></button>
    </div>
  </nav>
  
    <!-- 편집화면 하단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
    <nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="btn-group" role="group" aria-label="기능">
      <button type="button" class="btn btn-primary"><%= link_to "교정 전송", save_proof_reading_pdf_page_path(@working_article.page), method: :get, data: { confirm: '정말 보내시겠습니까?'} %></button>
      <button type="button" class="btn btn-danger"><%= link_to "인쇄 전송", send_pdf_to_printer_page_path(@working_article.page), method: :get, data: { confirm: '정말 보내시겠습니까?'} %></button>
      <button type="button" class="btn btn-warning"><%= link_to "페이지 PDF", download_pdf_page_path(@working_article.page), method: :get %></button>
      <button type="button" class="btn btn-info"><%= link_to "기사 PDF", download_pdf_working_article_path(@working_article), method: :get %></button>
    </div>
    <div class="btn-group btn-right" role="group" aria-label="기능">
      <%= f.button "저장하기", class: "btn btn-primary", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
    </div>
    </nav>
  
<div class="view">
  <div class="col-xs-1 col-sm-1">
  <div class="col-xs-12 col-sm-11">
  <% @working_article.page.section_pages.each do |page| %>
    <a href="<%= page_path(page) %>">
    <!-- img width="100%" src="<%= page.jpg_image_path %>"></img-->
    <%= raw page.to_svg_with_jpg %>
  <p align=center>
      <%= page.page_number %>
    </a>
<% end %>
</div>
  </div>

  <div class="col-xs-11 col-sm-11" style="padding-bottom: 40px;" width="100%">
    <input class="input_e" id="tab9" type="radio" name="tabs">
    <label class="taplabel" for="tab9"><% if @working_article.page.page_number == 1 %><%= "#{@working_article.page.page_number}" %><% else %><%= "#{@working_article.page.section_name}" %><% end %>면</label>

    <input class="input_e" id="tab5" type="radio" name="tabs">
    <label class="taplabel" for="tab5"><%= "#{@working_article.page.page_number}" %>페이지</label>

    <input class="input_e" id="tab1" type="radio" name="tabs" checked>
    <label class="taplabel" for="tab1"><%= "#{@working_article.order}" %>번 기사</label>

    <!--input class="input_e" id="tab4" type="radio" name="tabs">
    <label class="taplabel" for="tab4">기사 미리보기</label -->
    
    <input class="input_d" id="tab2" type="radio" name="tabs">
    <label class="taplabel" for="tab2">사진</label>
    
    <input class="input_d" id="tab3" type="radio" name="tabs">
    <label class="taplabel" for="tab3">그래픽</label>
    
    <section class="section" id="content9">
      <div class="col-xs-12 col-sm-12">
          <% @pages.each do |page| %>
            <div class = "col-xs-6 col-md-3"  align='center'>
            <!--a href="<%=  page_path(page) %>"><img  src="<%= page.jpg_image_path %>" width="100%"></img></a-->
            <%= raw page.to_svg_with_jpg %>
            <h4 align='center'><a href='<%= page_path(page)%>'><%= page.page_number %></a></h4>
          </div>    <!-- true -->
          <% end %>
      </div>
    </section>


    <section class="section" id="content1">
      <div class="col-xs-3 col-sm-4">
        <div class="col-xs-12 col-sm-12">
          <div>
            <%= raw @working_article.page.to_svg_with_jpg %>
            <p align=center>
            <%= @working_article.page.page_number %>
          </div>
        </div>
      </div>
    
      <div class="col-xs-12 col-sm-8">
        <% if @working_article.kind == '사설' || @working_article.kind == 'editorial' %>
          <%= render 'editorial', article: @working_article, page_number:  @working_article.page_number%>
        <% elsif @working_article.kind == '기고' || @working_article.kind == 'opinion' %>
          <%= render 'opinion', article: @working_article %>
        <% elsif @working_article.kind == '부고-인사'  %>
          <%= render 'obituary', article: @working_article %>
        <% elsif @working_article.kind == '특집'  %>
          <%= render 'special', article: @working_article %>
        <% elsif @working_article.kind == '책소개'  %>
          <%= render 'book', article: @working_article %>
        <% else %>
          <%= render 'form', article: @working_article %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-12">
        <%= render 'show_prewview', article: @working_article %>
      </div>
    </section>

    <section class="section" id="content2">
      <div class="col-xs-3 col-sm-4">
        <div class="col-xs-12 col-sm-12">
          <div>
            <%= raw @working_article.page.to_svg_with_jpg %>
            <p align=center>
            <%= @working_article.page.page_number %>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-8">
        <% if @working_article.kind == '기사' || @working_article.kind == '사진' || @working_article.kind == '박스기고' || @working_article.kind == '특집' || @working_article.kind == '책소개' %>
            <% @working_article.images.sort_by{|x| x.id}.each do |image| %>
              <%= render 'images/form', image: image %>
            <% end %>
          <% if @working_article.images.length < 3 %>
            <%= form_with( model: @working_article, :html => { :multipart => true }, :url=> {action: 'upload_images'}) do |f| %>
            <%= f.fields_for :images, Image.new do |p| %>
            <br>
            <br>
            <hr>
            <div class="field">
              <label class="btn btn-warning">
                사진 파일선택
                <%= p.file_field :image, style: "display: none;", :multiple => true, name: "images[image][]" %>
              </label><input type="text" placeholder="선택한 파일 없음" class="form-control width2" readonly>
            </div>
            <% end %>
            <div class="actions">
              <%= f.button "사진 올리기", issue: @working_article.issue, class: "btn btn-primary btn-sm", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
            </div>
          <% end %>
        <% end %>

        <% link_to "이미지 추가", add_image_article_path(@working_article), method: :get, class: "btn btn-sm btn-danger" %>
        <% link_to "저자 이미지 추가", add_personal_image_article_path(@working_article), method: :get, class: "btn btn-sm btn-danger" %>
        <br>
        <hr>
        <% end %>
      </div>

    </section>

    <section class="section" id="content3">
    <div class="col-xs-3 col-sm-4">
      <div class="col-xs-12 col-sm-12">
        <div>
          <%= raw @working_article.page.to_svg_with_jpg %>
          <p align=center>
          <%= @working_article.page.page_number %>
        </div>
      </div>
    </div>
    
      <div class="col-xs-12 col-sm-8">
        <% if @working_article.kind == '기사' || @working_article.kind == '사진' %>
        <div class="row2">
          <% @working_article.graphics.each do |graphic| %>
          <%= render 'graphics/form', graphic: graphic %>
          <% end %>
        </div>
        <% if  @working_article.graphics.length <= 2 %>
        <%= form_with( model: @working_article, :html => { :multipart => true }, :url=> {action: 'upload_graphics'}) do |f| %>
        <%= f.fields_for :images, Image.new do |p| %>
        <br>
        <br>
        <hr>
        <div class="field">
          <label class="btn btn-warning">
            그래픽 파일선택
            <%= p.file_field :image, style: "display: none;", :multiple => true, name: "images[image][]" %>
          </label><input type="text" placeholder="선택한 파일 없음" class="form-control width2" readonly>
        </div>
        <% end %>
        <div class="actions">
          <%= f.button "그래픽 올리기", issue: @working_article.issue, class: "btn btn-primary btn-sm", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
        </div>
        <% end %>
        <% end %>

        <% link_to "이미지 추가", add_image_article_path(@working_article), method: :get, class: "btn btn-sm btn-danger" %>
        <% link_to "저자 이미지 추가", add_personal_image_article_path(@working_article), method: :get, class: "btn btn-sm btn-danger" %>
        <br>
        <hr>
        <% end %>
      </div>
    </section>

    <section class="section" id="content4">
    <div class="col-xs-3 col-sm-4">
      <div class="col-xs-12 col-sm-12">
        <div>
          <%= raw @working_article.page.to_svg_with_jpg %>
          <p align=center>
          <%= @working_article.page.page_number %>
        </div>
      </div>
    </div>
    
    <div class="col-xs-12 col-sm-8">
      <img src="<%= @working_article.jpg_image_path %>"></img>
    </div>
  </section>

  <section class="section" id="content5">
    <div class="col-xs-12 col-sm-12">
      <%= raw @working_article.page.to_svg_with_jpg %>
        <a href="<%= page_path(@working_article.page) %>"><p align=center><%= @working_article.page.page_number %></a>
    </div>
  </section>

</div>

<!-- div class="col-sm-12 col-md-12" align="center">
<%= render 'show_prewview', article: @working_article %>
</div -->


</div>
<% end %>
