<h3 align="center">연합 그래픽</h3>
<%= search_form_for @q do |f| %>
<%= f.label '카테고리' %>
<%= f.select :category_cont, options_for_select(%w[정치 경제 사회 문화 스포츠/레저 국제 지방 IT/과학 북한 민족], session[:current_yh_graphic_category]), :include_blank => '전체' %>
<%= f.submit %>
<% end %>
<br>

<div align="center">
  <%= paginate @yh_graphics %>
</div>

<div class="view">
  <% @yh_graphics.each do |yh_graphic| %>
    <div class="col-md-2">
      <a href="<%=  yh_graphic_path(yh_graphic) %>"><img style="object-fit:cover",  src="<%= yh_graphic.preview_path %>" width="200px" height="200px"></img></a>
      <p align="center"><%= yh_graphic.title %></p>
    </div>
  <% end %>
</div>

<div align="center">
  <%= paginate @yh_graphics %>
</div>

