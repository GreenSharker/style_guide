  <% end %>
  <div class="row">
  <div class="col-xs-12 col-sm-12">
      <%= image_tag image.image.url, :width => "100%" %>
 </div>
 <div class="col-xs-12 col-sm-12">
        <div class="field">
          <%= f.label :적용됨 %>
          <%= f.check_box :used_in_layout %>
        </div>

        <div class="field">
        <%= f.label :위치 %>
        <%= f.number_field :position, width: "50px" %>
        </div>

