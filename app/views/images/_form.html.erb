          <%= f.label :사진제목 %>
          <%= f.text_field :caption_title, cols: "60" %>
        </div>

        <div class="field">
          <%= f.label :사진설명 %>
          <%= f.text_area :caption, cols: "60", rows: "2", font_size: "16px"%>
        </div>

        <div class="field">
          <%= f.label :출처 %>
          <%= f.text_field :source %>
        </div>

        <div class="actions">
          <%= f.button "수정", class: "btn btn-primary btn-sm" %>
          <%= link_to '삭제', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md btn-danger" %>

        </div>
      </div>  
  </div>

<% end %>