<%= form_for(image, :html => { :multipart => true })  do |f| %>
  <% if image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul>
      <% image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-12 col-sm-5">
    <p><%= image.size_string %></p>
    <% if  image.image && image.image.url%>
      <%= image_tag image.image.url, :width => "100%", style: "padding-bottom:20px" %>
    <% else%>
      <%= image_tag image.empty_image_url, :width => "100%", style: "padding-bottom:20px" %>
    <% end %>
 </div>
 <div class="col-xs-12 col-sm-7">

        <div class="field">
        <%= f.label :위치 %><%= f.text_field :position, style: "width:40px", class: 'form-control' %>
        <%= f.label :가로시작_단 %><%= f.text_field :x_grid, style: "width:35px", class: 'form-control' %>
        <%= f.label :테두리 %><%= f.check_box :draw_frame %>
        </div>

        <div class="field">
        <%= f.label :크기 %><%= f.text_field :column, style: "width:40px", class: 'form-control' %>단  x  <%= f.text_field :row, style: "width:40px", class: 'form-control' %>열
        <%= f.text_field :extra_height_in_lines, style: "width:50px", class: 'form-control' %>행 추가
        </div>

        <div class="field">
          <!-- %= f.label '사진제목과 설명' %-->
          <%= f.text_field :caption_title, cols: "60", placeholder: "사진제목", class: 'form-control', autocomplete: 'off' %>
          <%= f.text_area :caption, cols: "50", rows: "5", font_size: "12px", placeholder: "사진설명을 여러줄 입력할 수 있습니다", class: 'form-control' , autocomplete: 'off'%>
          <%= f.text_field :source, placeholder: "사진출처", class: 'form-control', autocomplete: 'off' %>
        </div>

        <div class="actions">
          <%= f.button "저장", class: "btn btn-primary btn-sm" %>
          <%= link_to '삭제', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md btn-danger" %>
        </div>

        <div class="field">
          <label class="btn btn-warning">
            사진 파일 바꾸기
            <%= f.file_field :image, style: "display: none;" %>
          </label><input type="text" placeholder="선택한 파일 없음" class="form-control width2" readonly>
        </div>

        <%= link_to '사진 크롭', crop_image_path(image), method: :get, class: "btn btn-md btn-success"  %>
        <div class="field">
          <%= f.label :사진정렬 %>
          <%= f.select :fit_type, %w[최적 가로 세로 욱여넣기], {include_blank: false} %>
        </div>
  </div>

  <!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
  <nav class="navbar navbar-default navbar-fixed-top2">
    <div class="btn-group" role="group" aria-label="기능">
      <button type="button" class="btn btn-success"><%= link_to "이전으로", page_path(@working_article.page), method: :get %></button>
      <%= f.button "저장하기", class: "btn btn-primary", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
      <button type="button" class="btn btn-warning"><%= link_to "페이지 PDF", download_pdf_page_path(@working_article.page), method: :get %></button>
      <button type="button" class="btn btn-danger"><%= link_to "기사 PDF", download_pdf_working_article_path(@working_article), method: :get %></button>
    <div>
  </nav>
    <!-- 편집화면 하단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
    <nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="btn-group right" role="group" aria-label="기능">
      <button type="button" class="btn btn-success"><%= link_to "이전으로", page_path(@working_article.page), method: :get %></button>
      <%= f.button "저장하기", class: "btn btn-primary", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
      <button type="button" class="btn btn-warning"><%= link_to "페이지 PDF", download_pdf_page_path(@working_article.page), method: :get %></button>
      <button type="button" class="btn btn-danger"><%= link_to "기사 PDF", download_pdf_working_article_path(@working_article), method: :get %></button>
    <div>
    </nav>
<% end %>
