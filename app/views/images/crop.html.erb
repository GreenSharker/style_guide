<div align='center'>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">영역선택</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-8">
          <%= image_tag @image.image_url, id: "cropbox", width: 500 %>
          <br>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= simple_form_for(@image) do |f| %>
              <div class="form-group">
                <div class="row">
                  <div class="col-md-3 mb-3">
                    <%= f.label :crop_x, "x축"%>
                    <%= f.text_field :crop_x, placeholder: "x축", id:"dataX", class: "form-control"%>
                  </div>
                  <div class="col-md-3 mb-3">
                    <%= f.label :crop_y, "y축"%>
                    <%= f.text_field :crop_y, placeholder: "y축", id:"dataY", class: "form-control"%>
                  </div>
                  <div class="col-md-3 mb-3">
                    <%= f.label :crop_w, "크롭된 가로"%>
                    <%= f.text_field :crop_w, placeholder: "가로", id:"dataW", class: "form-control"%>
                  </div>
                  <div class="col-md-3 mb-3">
                    <%= f.label :crop_h, "크롭된 세로" %>
                    <%= f.text_field :crop_h, placeholder: "세로", id:"dataH", class: "form-control"%>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-3 mb-3">
                  <%= f.label :grid_width, "그리드 가로 정보" %>
                  <p id="getGridWidth"><%= @grid_width %></p>
                </div>
                <div class="col-md-3 mb-3">
                  <button id="btnCropData">크롭정보 가져오기</button>
                </div>
              </div>
              <div class="row">
                <%= f.text_field :column, style: "width:40px", class: 'form-control' %>단 x
                <%= f.text_field :row, style: "width:40px", class: 'form-control' %>열
                <%= f.text_field :extra_height_in_lines, style: "width:50px", class: 'form-control' %>행 추가
              </div>
              <div class="form-group">
                <%= f.button :submit, '크롭', id: "saveCropData",method: :fetch,  class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
