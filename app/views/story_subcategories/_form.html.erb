<%= simple_form_for(@story_subcategory) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "카테고리 이름" %>
    <%= f.input :code, label: "카테고리 코드" %>
    <%= f.association :story_category, label: "상위 카테고리" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
