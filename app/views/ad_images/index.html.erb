<p id="notice"><%= notice %></p>

<h1>AdImage</h1>

<table>
  <thead>
    <tr>
      <th>Ad type</th>
      <th>Column</th>
      <th>Row</th>
      <th>Page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ad_images.each do |ad_image| %>
      <tr>
        <td><%= ad_image.ad_type %></td>
        <td><%= ad_image.column %></td>
        <td><%= ad_image.row %></td>
        <td><%= ad_image.page_number %></td>
        <td><%= link_to 'Show', ad_image %></td>
        <td><%= link_to 'Edit', edit_ad_image_path(ad_image) %></td>
        <td><%= link_to 'Destroy', ad_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

