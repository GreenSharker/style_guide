<div class="view">
  <% @issue.pages.each do |page| %>
    <div class="col-xs-6 col-md-2" align='center'>
      <a href="<%=  page_path(page) %>">
        <img src="<%= page.jpg_image_path %>" width="100%"></img>
      </a>
      <!-- %= raw page.to_svg_with_jpg % -->

      <h4 align='center'><button type="button" class="btn btn-info"><%= link_to "#{page.page_number}면", page_path(page) %></button>                    </h4>

    </div>
    <!-- true -->
  <% end %>

</div>
