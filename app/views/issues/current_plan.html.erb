<p id="notice"><%= notice %></p>
<h3 align="center"><%= @issue.date %>: 면배열표</h3>
<table border= '1' align="center">
  <thead>
    <tr>
      <th>지면</th>
      <th style="text-align:center;">면머리</th>
      <th>기사수</th>
      <th>광고크기</th>
      <th>칼라</th>
      <th>광고명</th>
      <th>버튼</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @page_plans.each do |page_plan| %>
      <% if page_plan.color_page %>
        <tr style="background-color:pink;">
          <td style="text-align:center;"><%= page_plan.page_number %></td>
          <td style="text-align:center;"><%= page_plan.section_name %></td>
          <td style="text-align:center;"><%= page_plan.story_count %></td>
          <td style="text-align:center;"><%= page_plan.ad_type %></td>
          <td style="text-align:center;"><%= page_plan.ad_type %></td>
          <td style="text-align:center;"><%= page_plan.advertiser %></td>
          <% if page_plan.need_update? %>
            <td><%= button_to "적용", update_page_page_plan_path(page_plan), method: :get, class: "btn btn-sm btn-danger" %></td>
          <% else %>
            <td><%= button_to "완료", "#", method: :get, class: "btn btn-sm btn-success" %></td>
          <% end %>
          <td><%= button_to "수정", edit_page_plan_path(page_plan), method: :get, class: "btn btn-sm btn-warning" %></td>
        </tr>
      <% else %>
        <tr style="background-color:white;">
          <td style="text-align:center;"><%= page_plan.page_number %></td>
          <td style="text-align:center;"><%= page_plan.section_name %></td>
          <td style="text-align:center;"><%= page_plan.story_count %></td>
          <td style="text-align:center;"><%= page_plan.ad_type %></td>
          <td style="text-align:center;"><%= page_plan.ad_type %></td>
          <td style="text-align:center;"><%= page_plan.advertiser %></td>
          <% if page_plan.need_update? %>
            <td><%= button_to "적용", update_page_page_plan_path(page_plan), method: :get, class: "btn btn-sm btn-danger" %></td>
          <% else %>
            <td><%= button_to "왼료", "#", method: :get, class: "btn btn-sm btn-success" %></td>
          <% end %>
          <td><%= button_to "수정", edit_page_plan_path(page_plan), method: :get, class: "btn btn-sm btn-warning" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


<div align="center">
  <%= link_to "페이지 생성", update_plan_issue_path(Issue.last.id), method: :get, class: "btn-group btn btn-lg btn-info" %>
</div>
