<p id="notice"><%= notice %></p>

<div align="center">
  <h3>이전 신문 보기</h3>

  <table border="1">
    <thead>
      <tr>
        <th>날짜</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @issues.each do |issue| %>
        <% next if issue == @issues.last %>

        <tr>
          <td><%= issue.date %></td>
          <td><%= button_to '보기', issue, method: :get, class: "btn btn-sm btn-success"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= paginate @issues %>
</div>
