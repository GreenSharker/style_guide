<p id="notice"><%= notice %></p>

<div align="center">
  <h3>이전 신문 보기</h3>

  <table class="table table-striped" style="width: 200px;">
    <thead
      <tr>
        <th>날짜</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @issues.each do |issue| %>
        <% next if issue == @issues.last %>

        <tr>
          <td>
          <%= button_to "#{issue.date}(#{issue.number})", issue, method: :get, class: "btn btn-sm btn-primary"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= paginate @issues %>
</div>
