<%= simple_form_for(profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: "분류", :collection => ["기고", "정치시평"], include_blank: false %>
    <%= f.input :name, label: "이름" %>
    <%= f.input :work, label: "소속" %>
    <%= f.input :position, label: "직책" %>
    <%= f.input :profile_image, label: "EPS선택" %>
    <%= f.input :profile_jpg_image, label: "JPG선택" %>
    <%= f.association :publication , :as => :hidden, input_html: {value: 1}%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "저장"%>
  </div>
<% end %>
