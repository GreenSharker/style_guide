<p id="notice"><%= notice %></p>

<h3>기고 저자</h3>
<%= search_form_for @q do |f| %>
  <%= f.label '이름에 포함된 글자로' %>
  <%= f.search_field :name_cont %>
  <%= f.submit %>
<% end %>
<br>

<div class="row">
  <% @profiles.each do |writer| %>
  <div class = "col-sm-3 col-md-3"  align='center'>
    <% if browser.safari? %>
      <a href="<%=  profile_path(writer) %>"><img  src="<%= writer.pdf_image_path %>" width="100%"></img></a>
      <h4 align='center'><a href='<%= profile_path(writer)%>'><%= writer.name %></a></h4>
   <% else %>
      <a href="<%=  profile_path(writer) %>"><img  src="<%= writer.jpg_image_path %>" width="100%"></img></a>
      <h4 align='center'><a href='<%= profile_path(writer)%>'><%= writer.name %></a></h4>
   <% end %>
  </div>    <!-- true -->
  <% end %>
</div>

