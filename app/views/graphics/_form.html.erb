      </ul>
    </div>
  <% end %>
  <div class="row">
  <div class="col-xs-12 col-md-12">
    <p><%= graphic.size_string %></p>
    <%= image_tag graphic.graphic.url, :width => "100%", style: "padding-bottom:20px" %>
 </div>
 <div class="col-xs-12 col-md-12">



        <div class="field">
        <%= f.label :위치 %><%= f.text_field :position, style: "width:40px", class: 'form-control' %>
