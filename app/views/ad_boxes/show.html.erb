
<h3>광고정보</h3>
<div align="center">
  <%= link_to "이전으로", page_path(@ad_box.page), method: :get, class: "btn btn-md btn-success" %>
</div>

<div class="row">
  <div class="col-md-6">
    <%= render 'form', ad_box: @ad_box %>
    <br/>
    <br/>
    <br/>
  </div>
    <!-- true -->
  <div class="col-md-6">
    <% unless @ad_box.ad_image.nil? %>
      <% if browser.safari? %>
        <img  src="<%= @ad_box.pdf_image_path %>" ></img>
      <% elsif browser.modern?  || browser.ie?%>
        <img  src="<%= @ad_box.jpg_image_path %>" ></img>
      <% end %>
    <% end %>
  </div>
</div>
