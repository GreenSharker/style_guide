<%= simple_form_for(@ad_box) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :column %>
  <%= f.input :row %>
  <%= f.input :ad_type %>
  <%= f.input :advertiser %>
  <%= f.input :ad_image %>
</div>
<div class="form-actions">
  <%= f.button :submit, "저장" %>
</div>

<br>

<!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
<nav class="navbar navbar-default navbar-fixed-top2">
  <ul class="nav navbar-nav2 navbar-left float-frame">
    <li class="float-unit">
      <%= link_to "이전으로", page_path(@ad_box.page), method: :get, class: "btn btn-md btn-success" %>
    </li>
    <li class="float-unit">
      <%= f.button :submit, "저장하기", class: "btn btn-md btn-primary navbar-btn", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
    </li>
    <li class="float-unit">
      <%= link_to "페이지 PDF", download_pdf_page_path(@ad_box.page), method: :get, class: "btn btn-md btn-warning" %>
    </li>
  </ul>
</nav>
<% end %>
