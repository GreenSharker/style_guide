<%= simple_form_for(@ad_box) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :column, label: "단" %>
  <%= f.input :row, label: "열" %>
  <%= f.input :ad_type, label: "종류" %>
  <%= f.input :advertiser, label: "광고주" %>
  <%= f.input :ad_image, label: "광고 이미지" %>
</div>
<div class="form-actions">
  <%= f.button :submit, "저장" %>
</div>

<br>



<!-- 편집화면 상단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
<nav class="navbar navbar-default navbar-fixed-top2">
  <div class="btn-group" role="group" aria-label="기능">
    <button type="button" class="btn btn-success"><%= link_to "이전으로", page_path(@ad_box.page), method: :get %></button>
    <%= f.button :submit, "저장하기", class: "btn btn-primary", remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
  </div>
</nav>

<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="btn-group" role="group" aria-label="전송">
    <button type="button" class="btn btn-primary"><%= link_to "교정 전송", save_proof_reading_pdf_page_path, method: :get, data: { confirm: '정말 보내시겠습니까?'} %></button>
    <button type="button" class="btn btn-danger"><%= link_to "인쇄 전송", send_pdf_to_printer_page_path, method: :get, data: { confirm: '정말 보내시겠습니까?'} %></button>
    <button type="button" class="btn btn-warning"><%= link_to "페이지 PDF", download_pdf_page_path(@ad_box.page), method: :get %></button>
    <button type="button" class="btn btn-info"><%= link_to "광고 PDF", download_pdf_ad_box_path(@ad_box), method: :get %></button>
  </div>
</nav>
<% end %>


