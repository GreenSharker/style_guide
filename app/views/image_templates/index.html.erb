<p id="notice"><%= notice %></p>

<h1>Image Templates</h1>

<table>
  <thead>
    <tr>
      <th>Column</th>
      <th>Height In Lines</th>
      <th>Image path</th>
      <th>Cation title</th>
      <th>Caption</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_templates.each do |image_template| %>
      <tr>
        <td><%= image_template.column %></td>
        <td><%= image_template.height_in_lines %></td>
        <td><%= image_template.image_path %></td>
        <td><%= image_template.caption_title %></td>
        <td><%= image_template.caption %></td>
        <td><%= image_template.position %></td>
        <td><%= link_to 'Show', image_template %></td>
        <td><%= link_to 'Edit', edit_image_template_path(image_template) %></td>
        <td><%= link_to 'Destroy', image_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

