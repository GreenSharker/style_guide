
<h3 align='center'>7단면 이이지 레이아웃</h3>

<p id="notice"><%= notice %></p>

<table border="1" align="center">
  <thead>
    <tr>
      <th style="text-align:center;">사진 사이즈</th>
      <th style="text-align:center;">사진 높이(줄단위)</th>
      <th style="text-align:center;">차지면적(줄단위) </th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_templates.each do |image_template| %>
      <tr>
        <td style="text-align:center;"> <%= image_template.image_size_in_grid %></td>
        <td style="text-align:center;"><%= image_template.height_in_lines %></td>
        <td style="text-align:center;"><%= image_template.image_area_in_lines %></td>
        <td><%= button_to "보기", image_template, method: :get, class: "btn btn-sm btn-success" %></td>
        <td><%= button_to "수정", edit_image_template_path(image_template), method: :get, class: "btn btn-sm btn-warning" %></td>
        <td><%= button_to "복제", duplicate_image_template_path(image_template), method: :get, class: "btn btn-sm btn-primary" %></td>
        <td><%= button_to "삭제", image_template, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div align="center">
  <%= link_to "새항목 생성", new_section_path, method: :get, class: "btn btn-sm btn-info" , align: "center"%>
  <%= link_to "다운로드 CSV", sections_path(format: "csv"), method: :get, class: "btn btn-sm btn-warning" , align: "center"%>
</div>

<div align="center">
  <%= paginate @image_templates %>
</div>
