<h3 align="center">연합사진</h3>
<%= search_form_for @q do |f| %>
<%= f.label '카테고리' %>
<%= f.select :category_cont, options_for_select(%w[정치 경제 사회 문화 스포츠/레저 국제 지방 IT/과학 북한 민족], session[:current_yh_picture_category]), :include_blank => '전체' %>
<%= f.submit %>
<% end %>
<br>

<div align="center">
  <%= paginate @yh_pictures %>
</div>

<div class="view">
  <% @yh_pictures.each do |yh_picture| %>
    <div class="col-md-2">
      <a href="<%=  yh_picture_path(yh_picture) %>"><img style="object-fit:cover",  src="<%= yh_picture.thumb_path %>" width="200px" height="200px"></img></a>
      <p align="center"><%= yh_picture.title %></p>
    </div>
  <% end %>
</div>

<div align="center">
  <%= paginate @yh_pictures %>
</div>

