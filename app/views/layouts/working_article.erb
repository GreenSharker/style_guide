<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "NewsGo" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Style Guide" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  <script>
  $(function() {

  // We can attach the `fileselect` event to all file inputs on the page
  $(document).on('change', ':file', function() {
    var input = $(this),
        numFiles = input.get(0).files ? input.get(0).files.length : 1,
        label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
    input.trigger('fileselect', [numFiles, label]);
  });

  // We can watch for our custom `fileselect` event like this
  $(document).ready( function() {
      $(':file').on('fileselect', function(event, numFiles, label) {

          var input = $(this).parents('.field').find(':text'),
              log = numFiles > 1 ? numFiles + ' files selected' : label;

          if( input.length ) {
              input.val(log);
          } else {
              if( log ) alert(log);
          }

      });
  });
  
});
</script>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <header id="header" >
      <%= render 'layouts/working_navigation' %>
    </header>
    <main role="main" id="container"  >
      <div class="space">
      <p> </p>
      </div>
       <%= render 'layouts/messages' %>
       <%= yield %>
       <div class="space">
       <p> </p>
       </div>
    </main>
    <footer id="footer">
      <p> </p>
    </footer>
  </body>
</html>
