<div class="authform" width="400px">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>로그인</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to '사용자 등록하기', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :이메일 %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "암호를 기역하지 못 하십니까?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :암호 %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit '로그인', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> 정보저장
          </label>
        </div>
      <% end -%>
  <% end %>
</div>
