<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-2">
    <%= render 'form', page_heading: @page_heading %>

  </div>
  <div class="col-md-10">
    <div align="center">
      <%= button_to "다운로드 배경 PDF", download_pdf_page_heading_path(@page_heading), method: :get, class: "btn btn-sm btn-danger" %>
    </div>
    <br>
    <br>

    <img src="<%= @page_heading.pdf_image_path %>" height="400px"></img>
    <br>
    <br>

    <div align="center">

      <%= form_with( model: @page_heading, :html => { :multipart => true }, :url=> {action: 'upload_images'}) do |f| %>
        <%= f.fields_for :heading_bg_image, HeadingBgImage.new do |p| %>
          <div class="field">
            <%= p.label '배경 이미지 선택' %><br>
            <h3> <%= p.file_field :heading_bg_image %></h3>
          </div>
        <% end %>

        <div class="actions">
          <%= f.button "배경 이미지 올리기", class: "btn btn-primary btn-lg", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> 처리중..."} %>
        </div>
      <% end %>

    </div>

  </div>
</div>


<div class="button-group">
    <%= link_to "이전으로", page_path(@page_heading.page), method: :get, class: "btn btn-lg btn-success" %>
</div>
